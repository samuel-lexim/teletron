<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Lof\HidePrice\Block\Adminhtml\Menu" name="lof_hideprice_menu" />
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Lof\HidePrice\Block\Adminhtml\Message\Edit" name="lofhideprice_form_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Lof\HidePrice\Block\Adminhtml\Message\Edit\Tabs" name="lof_hideprice_edit_tabs">
                <block class="Lof\HidePrice\Block\Adminhtml\Message\Edit\Tab\Main" name="lof_hideprice_edit_tab_main"/>
                <block class="Lof\HidePrice\Block\Adminhtml\Message\Edit\Tab\Email" name="lof_hideprice_edit_tab_email"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">lof_hideprice_edit_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">email_section</argument>
                    <argument name="block" xsi:type="string">lof_hideprice_edit_tab_email</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
