<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::hideprice_elements" title="Hide Price"> 
                    <resource id="Lof_HidePrice::hideprice" title="Hide Price" sortOrder="40">
                         <resource id="Lof_HidePrice::hideprice_edit" title="Edit HidePrice" sortOrder="10" />
                        <resource id="Lof_HidePrice::hideprice_save" title="Save HidePrice" sortOrder="20" />
                        <resource id="Lof_HidePrice::hideprice_delete" title="Delete HidePrice" sortOrder="30" />
                    </resource>
                     <resource id="Lof_HidePrice::message" title="Hide Price" sortOrder="40">
                         <resource id="Lof_HidePrice::message_edit" title="Edit Message" sortOrder="10" />
                        <resource id="Lof_HidePrice::message_save" title="Save Message" sortOrder="20" />
                        <resource id="Lof_HidePrice::message_delete" title="Delete Message" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_HidePrice::config_hideprice" title="HidePrice" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>